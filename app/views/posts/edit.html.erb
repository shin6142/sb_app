<div class="main posts-edit">
  <div class="container">
    <h1 class="form-heading">Edit</h1>
    <% @post.errors.full_messages.each do |message|%>
        <%= message %>
        <% end%>
    <%= form_tag("/posts/#{@post.id}/update") do %>
        <textarea name="content">
         <%= @post.content%></textarea>
        <input type="submit" value="update">
    <% end %>
  </div>
</div>
