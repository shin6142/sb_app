<%= form_for [:single, @post] do |form| %>
  <p>
    <%= @post.errors.full_messages.to_sentence %>
  </p>
  <p>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </p>
  <p>
    <%= form.label :documents_files %>
    <%= form.attachment_field :documents_files %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>
